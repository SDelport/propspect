@model Tenant
@{
    ViewBag.Title = "Create";

    MvcHtmlString ButtonText;
    if (Model.TenantID > 0)
    {
        ButtonText = new MvcHtmlString("Save");
    }
    else
    {
        ButtonText = new MvcHtmlString("Create");
    }
}


@*<h2>Add @Model.Type</h2>*@

@*<form method="POST" action="/user/add-user">
    @Form.Textbox(x=>x.Username)
    @Form.Hidden(x=>x.Type)
    @Form.SubmitButton("Create");
</form>*@

<div class="row">
    <div class="col s12 m10 l6  offset-m1 offset-l3">
        <form action="/user/add-user/t" method="POST" class="z-depth-1 white">
            <div class="lg-upper-form">
                <h5 class="center-align">Add @PropSpect.Api.Models.Helpers.Associations.GetLoginRole(Model.Type)</h5>
            </div>
            <div class="lg-lower-form">
                <span class="right"><a href="/user/list/tenant">Back to List</a></span>
                <div class="row">
                    @Form.Hidden(x => x.TenantID)
                    @Form.Textbox(x => x.FirstName)
                    @Form.Textbox(x => x.LastName)
                    @Form.Textbox(x => x.Email)
                    @Form.Textbox(x => x.IDNumber)
                    @Form.Textbox(x => x.TelMobile)
                    @Form.Textbox(x => x.TelWork)
                    @Form.Textbox(x => x.Username)
                    @Form.Textbox(x => x.Password)
                    @Form.Hidden(x => x.UserID)
                    @Form.Hidden(x => x.Type)
                </div>            
                <div class="divider"></div>
                <span class="right-align">
                    <br />
                    <div class="row hide-on-med-and-down">
                        <a onclick="return confirm('Are you sure you want to discard all changes?')" href="/user/list/tenant">Discard</a>
                        @if (Model.TenantID > 0)
                        {
                            <a onclick="return confirm('Are you sure you want to delete this tenant?')" href="/user/delete/tenant/@Model.TenantID" style="margin-left: 20px;" class="btn btn-primary red">Delete</a>
                        }
                        <button style="margin-left: 20px;" class="btn btn-primary propspect-blue-background" role="submit">@ButtonText</button>
                    </div>
                    <div class="row hide-on-large-only">
                        <a onclick="return confirm('Are you sure you want to discard all changes?')" href="/user/list/tenant">Discard</a>
                        @if (Model.TenantID > 0)
                        {
                            <a onclick="return confirm('Are you sure you want to delete this tenant?')" href="/user/delete/tenant/@Model.TenantID" style="margin-left: 20px;" class="btn btn-primary red btn-block">Delete</a>
                        }
                        <button class="btn btn-primary propspect-blue-background btn-block" role="submit">@ButtonText</button>
                    </div>
                </span>
            </div>
        </form>
    </div>
</div>
<div class=" center">
    <img src="~/Content/Images/olea.png" class="img-max-500 center" />
</div>


