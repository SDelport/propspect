@model LandlordAdmin
@{
    ViewBag.Title = "Create";

    MvcHtmlString ButtonText;
    MvcHtmlString HeaderText;
    if (Model.LandlordAdminID > 0)
    {
        ButtonText = new MvcHtmlString("Save");
        HeaderText = new MvcHtmlString("Edit");
    }
    else
    {
        ButtonText = new MvcHtmlString("Create");
        HeaderText = new MvcHtmlString("Add");
    }
}

<div class="row">
    <div class="col s12 m10 l6  offset-m1 offset-l3">

        <form action="/user/add-user/a" method="POST" class="z-depth-1 white">
            <div class="lg-upper-form">
                <h5 class="center-align"> @HeaderText Administrator </h5>
            </div>
            <div class="lg-lower-form">

                <div class="row">
                    <span class="right"><a href="/user/list/admin">Back to List</a></span>
                    @Form.Hidden(x => x.LandlordAdminID)
                    @Form.Textbox(x => x.FirstName)
                    @Form.Textbox(x => x.LastName)
                    @Form.Textbox(x => x.Email)
                    @Form.Textbox(x => x.IDNumber)
                    @Form.Textbox(x => x.TelWork)
                    @Form.Textbox(x => x.TelMobile)
                    @Form.Hidden(x => x.UserKey)
                    @Form.Hidden(x => x.UserID)
                    @Form.Textbox(x => x.Username)

                    @if (Model.LandlordAdminID <= 0)
                    {
                        @Form.Textbox(x => x.Password)
                    }
                    @Form.Hidden(x => x.Type)

                </div>
                <div class="divider"></div>

                <span class="right-align">
                    <br />


                    <div class="row hide-on-med-and-down">
                        <a onclick="return confirm('Are you sure you want to discard all changes?')" href="/user/list/admin">Discard</a>
                        @if (Model.LandlordAdminID > 0)
                        {
                            <a onclick="return confirm('Are you sure you want to delete this administrator?')" href="/user/delete/admin/@Model.LandlordAdminID" style="margin-left: 20px;" class="btn btn-primary red">Delete</a>
                        }
                        <button style="margin-left: 20px;" class="btn btn-primary propspect-blue-background" role="submit">@ButtonText</button>
                    </div>
                    <div class="row hide-on-large-only">
                        <a onclick="return confirm('Are you sure you want to discard all changes?')" href="/user/list/admin">Discard</a>
                        @if (Model.LandlordAdminID > 0)
                        {
                            <a onclick="return confirm('Are you sure you want to delete this administrator?')" href="/user/delete/admin/@Model.LandlordAdminID" style="margin-left: 20px;" class="btn btn-primary red btn-block">Delete</a>
                        }
                        <button class="btn btn-primary propspect-blue-background btn-block" role="submit">@ButtonText</button>
                    </div>
                </span>
            </div>
        </form>
    </div>
</div>
<div class=" center">
    <img src="~/Content/Images/olea.png" class="img-max-500 center" />
</div>


