<div class="row">
    <div class="col s12 m10 l6  offset-m1 offset-l3">
        <form action="/user/add-user" method="POST" class="z-depth-1 white">
            <div class="lg-upper-form">
                <h5 class="center-align">Set your password here for the account <br /><b>@Model.Email</b></h5>
            </div>
            <div class="lg-lower-form">
                <div class="row">
                    @Form.Hidden(x => x.Key)
                    @Form.Textbox(x => x.Password)
                    @Form.Textbox(x => x.Password)
                    @Form.Textbox(x => x.ConfirmPassword)
                </div>            
                <div class="divider"></div>
                <span class="right-align">
                    <br />
                    @Form.Button("Create")
                </span>
            </div>
        </form>
    </div>
</div>
<div class=" center">
    <img src="~/Content/Images/olea.png" class="img-max-500 center" />
</div>


