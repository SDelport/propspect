@model FormControl
@{
    ViewBag.Title = "Textbox";

    MvcHtmlString binding = new MvcHtmlString("");

    if (Model.IsAsync)
    {
        binding = new MvcHtmlString(string.Format("data-bind=\"value: EditItem().{0}\"", Model.VariableName));
    }
}

<div class="input-field col s12">    
    <input type="text" class="form-control validate" @Model.ValidationAttributes name="@Model.PropertyName" id="@Model.HtmlID" placeholder="@Model.Label" value="@Model.Value">
    <label for="@Model.HtmlID" data-error="Bad">@Model.Label</label>
    @Model.Validation
</div>

